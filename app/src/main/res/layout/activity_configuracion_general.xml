<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_smoak"
    tools:context=".configuracionGeneral"
    tools:ignore="ExtraText">

    <!--LinearLayout que contiene:-->
    <!--ImageButton Regresar (Perfil de Usuario)-->
    <!--TextView Configuración General-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/salmon">

        <!--ImageButton Regresar (Perfil de Usuario)-->
        <ImageButton
            android:id="@+id/btn_Regresar"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/regresar" />
        <!--TextView Configuración General-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/configuracionGeneral"
            android:textStyle="bold"
            android:fontFamily="@font/nexa"
            android:textSize="24sp"
            android:textColor="@color/white_smoak"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <!--Cuenta-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="70dp"
        android:text="@string/cuenta"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="55dp"
        android:background="@android:color/transparent"
        android:textColor="@color/black"
        android:text="@string/cambiar_correo"
        android:textAllCaps="false"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="55dp"
        android:background="@android:color/transparent"
        android:textColor="@color/black"
        android:text="@string/cambiar_contraseña"
        android:textAllCaps="false"
        android:layout_marginBottom="10dp"/>
    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/black"/>
    <!--Perfil de Usuario-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="70dp"
        android:text="@string/perfil_usuario"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginLeft="55dp"
        android:background="@android:color/transparent"
        android:textColor="@color/black"
        android:text="@string/cambiar_imagen_perfil"
        android:textAllCaps="false"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="55dp"
        android:background="@android:color/transparent"
        android:textColor="@color/black"
        android:text="@string/cambiar_nombre"
        android:textAllCaps="false"
        android:layout_marginBottom="10dp"/>
    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/black"/>
    <!--Idioma de la aplicación-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="70dp"
        android:text="@string/idioma_aplicacion"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginLeft="55dp"
        android:background="@android:color/transparent"
        android:textColor="@color/black"
        android:text="@string/idioma_elegido"
        android:textAllCaps="false"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginLeft="55dp"
        android:background="@android:color/transparent"
        android:textColor="@color/black"
        android:text="@string/cambiar_tamaño_letra"
        android:textAllCaps="false"
        android:layout_marginBottom="10dp"/>
    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/black"/>
    <!--Ayuda-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="70dp"
        android:text="@string/ayuda"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="55dp"
        android:background="@android:color/transparent"
        android:textColor="@color/black"
        android:text="@string/centros_ayuda"
        android:textAllCaps="false"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="55dp"
        android:background="@android:color/transparent"
        android:textColor="@color/black"
        android:text="@string/contactanos"
        android:textAllCaps="false"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="55dp"
        android:background="@android:color/transparent"
        android:textColor="@color/black"
        android:text="@string/politica_privacidad"
        android:textAllCaps="false"
        android:layout_marginBottom="10dp"/>
    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/black"/>
    <!--Botón Cerrar Sesión-->
    <Button
        android:id="@+id/btn_cerrarSesión"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:text="@string/cerrar_sesion"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:fontFamily="@font/nexa"
        android:background="@drawable/round_butonlogin"/>


</LinearLayout>