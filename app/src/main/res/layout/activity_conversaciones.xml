<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_smoak"
    tools:context=".conversaciones">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/salmon">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:text="@string/conversaciones"
            android:textColor="@color/white_smoak"
            android:textSize="30sp"/>

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_gravity="center"
        android:paddingHorizontal="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btn_comunidades"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/comunidades"
            android:textColor="@color/brick"
            android:textSize="19sp"
            android:textStyle="bold"
            android:background="@android:color/transparent"/>

        <Button
            android:id="@+id/btn_privados"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/privados"
            android:textColor="@color/brick"
            android:textSize="19sp"
            android:textStyle="bold"
            android:background="@android:color/transparent"/>

    </GridLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar otras comunidades"
        android:gravity="center"
        android:textColor="@color/black"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="5"
        android:layout_gravity="center"
        android:background="@color/orange">

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/casa"
            android:background="@drawable/round_butonlogin"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="fitCenter"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:paddingHorizontal="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <ImageButton
            android:id="@+id/btn_map"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ubicacion"
            android:background="@drawable/round_butonlogin"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="fitCenter"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:paddingHorizontal="10dp"
            android:layout_marginRight="10dp"
            />
        <ImageButton
            android:id="@+id/btn_warnings"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/aviso"
            android:background="@drawable/round_butonlogin"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="fitCenter"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:paddingHorizontal="10dp"
            android:layout_marginRight="10dp"
            />
        <ImageButton
            android:id="@+id/btn_messages"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/charla"
            android:background="@drawable/round_butonlogin"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="fitCenter"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:paddingHorizontal="10dp"
            android:layout_marginRight="10dp"
            />
        <ImageButton
            android:id="@+id/btn_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/perfil"
            android:background="@drawable/round_butonlogin"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="fitCenter"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:paddingHorizontal="10dp"
            android:layout_marginRight="10dp"
            />
    </GridLayout>

</LinearLayout>