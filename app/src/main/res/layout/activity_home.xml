<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/crema"
    tools:context=".Home">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/gray"
        android:orientation="horizontal">

        <TextView
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:paddingTop="@dimen/input_margin"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lupa"
            android:scaleType="fitCenter"
            android:backgroundTint="@android:color/transparent"/>

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="5"
        android:layout_gravity="center"
        android:background="@color/gray">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/casa"
            android:background="@drawable/round_butonlogin"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="fitCenter"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:paddingHorizontal="10dp"
            android:layout_marginRight="10dp"
            />
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ubicacion"
            android:background="@drawable/round_butonlogin"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="fitCenter"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:paddingHorizontal="10dp"
            android:layout_marginRight="10dp"
            />
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/advertencia"
            android:background="@drawable/round_butonlogin"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="fitCenter"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:paddingHorizontal="10dp"
            android:layout_marginRight="10dp"
            />
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/charla"
            android:background="@drawable/round_butonlogin"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="fitCenter"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:paddingHorizontal="10dp"
            android:layout_marginRight="10dp"
            />
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/perfil"
            android:background="@drawable/round_butonlogin"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="fitCenter"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:paddingHorizontal="10dp"
            android:layout_marginRight="10dp"
            />
    </GridLayout>

</LinearLayout>